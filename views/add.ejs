<div style="margin: 2.5%;">
    <h3 class="display-4" style="text-align: center;">Tracing of funds using blockchain</h3>
    <h6 style="text-align: center;">User Type: Administrator</h6>
    <h6 style="text-align: center;">Balance: Rs. <%= centralGvt[0].balance %></h6>
    <br>
    <br>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <p class="display-4" style="font-size:xx-large"><b>Grant funds to State</b></p>
            <form id="gtogForm" method="POST" action="/allocate/ctos">
                <div class="input-group mb-3">
                        <input type="text" class="form-control" name="name1" value="Central Government" readonly="readonly" >
                        <input type="number" class="form-control" max="<%= centralGvt[0].balance %>" name="amount" placeholder="Amount">
                        <select name="project" id="project" class="form-control">
                            <% projects.forEach(function(project){ %>
                                <option value="<%= project.name %>"><%= project.name %></option>
                            <% }) %>
                        </select>
                        <select name="name2" id="name2" class="form-control">
                            <% governs.forEach(function(govern){ %>
                                <option value="<%= govern.name %>"><%= govern.name %></option>
                            <% }) %>
                        </select>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" type="button">Submit</button>
                        </div>
                </div>
            </form>
        </div>
