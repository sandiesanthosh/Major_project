<head>
    <title>BlockTrack</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">  
</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark"">
    <a class="navbar-brand" href="/indexDistrict">Block Track</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/indexDistrict">Home  <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="/addDistrict">Grant funds</a>
        <a class="nav-item nav-link disabled" href="/graph">Trace funds</a>
        <a class="nav-item nav-link" href="/department_transactions">Transactions</a>
      </div>
    </div>
    <ul class="nav navbar-nav ml-auto">
        <a class="nav-item nav-link" >Hello, <%= username %></a>
        <form class="form-inline" action="/logout?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger" type="submit">Logout</button>
          </form>
    </ul>
</nav>
<div style="margin: 2.5%;">
    
    <h3 class="display-4" style="text-align: center;">Tracing of funds using blockchain</h3>
    <h6 style="text-align: center;">User Type: State Government</h6>
    <br>
    <br>
    <div class="row align-items-start">
        <div class="col-md-6" style="margin-left: 2%; margin-right: 5%;">
            <p class="display-4" style="font-size:xx-large"><b>Add New District Government</b></p>
            <form method="POST" action="/district/add">
                <div class="input-group row"> 
                    <input type="text" class="form-control" name="name" placeholder="District Name">
                    <input type="text" class="form-control" name="email" placeholder="District Email">
                    <input type="text" class="form-control" name="identity" placeholder="Identity Proof">
                    <div class="input-group-append">
                      <button class="btn btn-primary" type="submit" type="button">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <p class="display-4" style="font-size:xx-large"><b>List of District Governments</b></p>
            <div class="card" style="width: 25rem;">
                <ul class="list-group list-group-flush">
                    <% districts.forEach(function(district){ %>
                        <li class="list-group-item lead"><%= district.name %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

</div>